<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jhb_hmac.fos_user.user_provider.class">Jhb\HmacBundle\Security\User\FosUserHmacProvider</parameter>
        <parameter key="jhb_hmac.fos_user.user_provider.form.class">Jhb\HmacBundle\Form\FosUserRegistrationForm</parameter>
    </parameters>

    <services>

        <service id="jhb_hmac.fos_user.user_provider" class="%jhb_hmac.fos_user.user_provider.class%">
            <argument type="service" id="fos_user.user_manager" />
        </service>

       <service id="jhb_hmac.fos_user.user_provider.form" class="%jhb_hmac.fos_user.user_provider.form.class%">
           <argument>%fos_user.model.user.class%</argument>
           <tag name="form.type" alias="jhb_hmac_fos_user_registration" />
       </service>

    </services>
</container>